{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Debug Server-Side",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "envFile": "${workspaceFolder}/.env.local",
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "started server on",
        "uriFormat": "http://localhost:%s",
        "action": "openExternally"
      }
    }
  ]
}